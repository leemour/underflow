- unless @question.errors.empty?
  = @question.errors.full_messages.each do |error|
    %ul.errors.question-errors
      %li.alert.alert-danger= error

=form_for @question, remote: true do |f|
  .form-group
    =f.label :title
    =f.text_field :title, class: 'form-control'
  .form-group
    =f.text_area :body, class: 'form-control'
  = fields_for :attachments do |a|
    .form-group
      = a.label :file
      = a.file_field :file
  .form-group
    = f.submit t('question.ask'), data: {disable_with: t('common.processing')}, class: 'btn btn-success'
    %button.cancel.btn= t('common.cancel')