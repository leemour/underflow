<% if @answer.accepted %>
  $('#answer-<%= @answer.id %> .accept').addClass('accepted');
  $('#answer-<%= @answer.id %> .accept .text').text(
    '<%= t('answer.best') %>'
  );
  $('#answer-<%= @answer.id %>').insertAfter($("#answers h3"));
  $('.answer .accept').addClass('hidden');
  $('#answer-<%= @answer.id %> .accept').removeClass('hidden');
<% else %>
  $('#answer-<%= @answer.id %> .accept').removeClass('accepted');
  $('#answer-<%= @answer.id %> .accept .text').text(
    '<%= t('answer.choose') %>'
  );
  $('.answer .accept').removeClass('hidden');
<% end %>
