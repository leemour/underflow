<% if @answer.accepted %>
  $('#answer-<%= @answer.id %> .accept').addClass('accepted');
  $('#answer-<%= @answer.id %> .accept').attr(
    'title', '<%= t('answer.best') %>'
  );
  $('#answer-<%= @answer.id %> .accept .text').text(
    '<%= t('answer.best') %>'
  );
  $('#answer-<%= @answer.id %>').insertAfter($("#answers h3").first());
  $('.answer .accept').addClass('hidden');
  $('#answer-<%= @answer.id %> .accept').removeClass('hidden');
  <% if @answer.question.bounty %>
    $('.question .bounty').replaceWith(
      '<%= j render 'bounties/bounty', bounty: @answer.question.bounty %>'
    );
  <% end %>
<% else %>
  $('#answer-<%= @answer.id %> .accept').removeClass('accepted');
  $('#answer-<%= @answer.id %> .accept').attr(
    'title', '<%= t('answer.choose') %>'
  );
  $('#answer-<%= @answer.id %> .accept .text').text(
    '<%= t('answer.choose') %>'
  );
  $('.answer .accept').removeClass('hidden');
  <% if @answer.question.bounty %>
    $('.question .bounty').replaceWith(
      '<%= j render 'bounties/bounty', bounty: @answer.question.bounty %>'
    );
  <% end %>
<% end %>
