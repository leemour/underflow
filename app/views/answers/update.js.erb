<% if @answer.errors.empty? %>
  $('#content').prepend('<%= j render 'shared/flash',
    flash: tr(:answer, 'updated') %>');

  <% if remotipart_submitted? %>
    $('#answers').html("<%= j "#{render 'questions/answers'}" %>");
  <% else %>
    $('#answers').html('<%= j render 'questions/answers' %>');
  <% end %>

  $('#answer-<%= @answer.id %>').css('background-color', '#eee');
<% else %>
  $('#answer-<%= @answer.id %> form').replaceWith(
    '<%= j render 'answers/form', answer: @answer, edit: true %>'
  );
<% end %>