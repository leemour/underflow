%h1
  = t('activerecord.models.tag.one')
  = @tag.name

%h2
  = link_to  [@tag, :questions] do
    = @tag.questions_count
    = t('activerecord.models.question', count: @tag.questions_count)
    = t('tag.with')
    = @tag.name

.tag-body
  .tag-excerpt
    = @tag.excerpt
  .tag-description
    = @tag.description

