$(function() {
  function enableMagicSuggest() {
    $('.suggest-tag').magicSuggest({
      required: true,
      useTabKey: true,
      useCommaKey: true,
      useZebraStyle: true,
      inputCfg: {"id":'tag-suggest-input'},
      data: gon.tag_names
    });
  }

  enableMagicSuggest();

  $('.question').on('click', '.question-details .edit', function(ev) {
    enableMagicSuggest();
  });
});
